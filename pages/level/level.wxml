<!--pages/level/level.wxml-->
<view class="container">

<view>
  <view>水平等级设置</view>
  <picker-view indicator-style="height: 50px;" style="width: 100%; height: 150px;" value="{{value}}" bindchange="bindChange">
    <picker-view-column>
      <view wx:for="{{levels}}" style="line-height: 50px" >{{item}}等级</view>
    </picker-view-column>
    
  </picker-view>
</view>
<view  wx:for="{{buttonArray}}" hover="{{is}}" >
      <button type="{{item.type}}" id="{{item.id}}" class="button" bindtap="{{item.even}}">{{item.text}}
      </button>
    </view>
</view>
